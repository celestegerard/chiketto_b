
<p>
  <strong>Title:</strong>
  <%= @prize.title %>
</p>

<p>
  <strong>Price:</strong>
  <%= @prize.text %>
</p>

<h2>Comments</h2>
<% @prize.comments.each do |comment| %>
  <p>
    <strong>Commenter:</strong>
    <%= comment.commenter %>
  </p>

  <p>
    <strong>Comment:</strong>
    <%= comment.body %>
  </p>
<% end %>


<h2>Add a comment:</h2>
<%= form_with(model: [ @prize, @prize.comments.build ], local: true) do |form| %>
<p>
  <%= form.label :commenter %><br>
  <%= form.text_field :commenter %>
</p>
<p>
  <%= form.label :body %><br>
  <%= form.text_area :body %>
</p>
<p>
  <%= form.submit %>
</p>
<% end %>

<%= link_to 'Edit', edit_prize_path(@prize) %>
<%= link_to 'Back to Prizes', prizes_path %>
